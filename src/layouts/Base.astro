---
import '../styles/global.css';
import { portfolioConfig } from '../config/portfolio.config';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  canonical?: string;
}

const {
  title,
  description = portfolioConfig.seo.description,
  image = portfolioConfig.seo.ogImage,
  type = 'website',
  canonical,
} = Astro.props;

const currentUrl = new URL(Astro.request.url);
const canonicalUrl = canonical || currentUrl.href;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />
    
    <!-- Open Graph -->
    <meta property="og:type" content={type} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, currentUrl).href} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content={portfolioConfig.seo.siteName} />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(image, currentUrl).href} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- Google Fonts - Montserrat -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- DNS Prefetch -->
    <link rel="dns-prefetch" href="https://fonts.gstatic.com" />
  </head>
  <body class="bg-background text-foreground antialiased">
    <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-foreground focus:text-background focus:rounded">
      Skip to main content
    </a>
    
    <header class="sticky top-0 z-40 border-b border-border bg-background">
      <div class="max-w-6xl mx-auto px-6">
        <nav class="flex items-center justify-between py-4">
          <div class="text-sm tracking-wide">
            <span class="text-foreground">{portfolioConfig.navigation.brand}</span>
          </div>
          
          <!-- Desktop Navigation -->
          <div class="hidden md:flex items-center gap-8">
            {portfolioConfig.navigation.links.map((link) => (
              <a href={link.href} class="text-sm text-mutedtransition-colors">
                {link.label}
              </a>
            ))}
          </div>

          <!-- Mobile Menu Button -->
          <button 
            id="mobile-menu-button"
            class="md:hidden flex items-center justify-center w-8 h-8 text-muted transition-colors"
            aria-label="Toggle mobile menu"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
          </button>
        </nav>

        <!-- Mobile Navigation -->
        <div id="mobile-menu" class="hidden md:hidden border-t border-border">
          <div class="py-4 space-y-3">
            {portfolioConfig.navigation.links.map((link) => (
              <a href={link.href} class="block text-sm text-muted transition-colors">
                {link.label}
              </a>
            ))}
          </div>
        </div>
      </div>
    </header>

    <script>
      document.getElementById('mobile-menu-button')?.addEventListener('click', () => {
        const menu = document.getElementById('mobile-menu');
        if (menu) {
          menu.classList.toggle('hidden');
        }
      });

      // Close mobile menu when clicking on a link
      document.querySelectorAll('#mobile-menu a').forEach(link => {
        link.addEventListener('click', () => {
          const menu = document.getElementById('mobile-menu');
          if (menu) {
            menu.classList.add('hidden');
          }
        });
      });

      // Blog functionality now handled by React component
    </script>

    <main id="main" class="min-h-screen">
      <slot />
    </main>

    <footer class="border-t border-border py-4">
      <div class="max-w-6xl mx-auto px-6">
        <div class="flex items-center justify-between">
          <div class="text-sm text-muted">
            {portfolioConfig.footer.location}
          </div>
          <div class="text-sm text-muted">
            <a 
              href={portfolioConfig.footer.sourceCode.url} 
              target="_blank" 
              rel="noopener noreferrer"
              class="transition-colors border-b border-transparent pb-0.5"
            >
              {portfolioConfig.footer.sourceCode.text}
            </a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>