---
import '../styles/global.css';
import { portfolioConfig } from '../config/portfolio.config';
import Header from '../components/Header.astro';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  canonical?: string;
}

const {
  title,
  description = portfolioConfig.seo.description,
  image = portfolioConfig.seo.ogImage,
  type = 'website',
  canonical,
} = Astro.props;

const currentUrl = new URL(Astro.request.url);
const canonicalUrl = canonical || currentUrl.href;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />
    
    <!-- Open Graph -->
    <meta property="og:type" content={type} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, currentUrl).href} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content={portfolioConfig.seo.siteName} />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(image, currentUrl).href} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Theme initialization script (prevents flash) -->
    <script is:inline>
      (function() {
        const theme = localStorage.getItem('theme') ||
          (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
        document.documentElement.classList.toggle('light', theme === 'light');
      })();
    </script>

    <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    
    <!-- DNS Prefetch -->
    <link rel="dns-prefetch" href="https://fonts.gstatic.com" />
  </head>
  <body class="bg-background text-foreground antialiased">
    <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-foreground focus:text-background focus:rounded">
      Skip to main content
    </a>
    
    <Header />

    <main id="main" class="min-h-screen">
      <slot />
    </main>

    <footer class="border-t border-border py-4">
      <div class="max-w-6xl mx-auto px-6">
        <div class="flex items-center justify-between">
          <div class="text-sm text-muted">
            {portfolioConfig.footer.location}
          </div>
          <div class="text-sm text-muted">
            <a 
              href={portfolioConfig.footer.sourceCode.url} 
              target="_blank" 
              rel="noopener noreferrer"
              class="transition-colors border-b border-transparent pb-0.5"
            >
              {portfolioConfig.footer.sourceCode.text}
            </a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>