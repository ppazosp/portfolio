---
export interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="mb-12">
  <h2 class="text-2xl font-mono text-foreground mb-2 tracking-wide">
    {title}
  </h2>
  {subtitle && (
    <p class="text-sm text-muted font-mono leading-relaxed max-w-2xl">
      {subtitle}
    </p>
  )}
</div>