---
import type { Locale } from '../lib/i18n';
import { getPortfolioConfig } from '../lib/i18n';
import * as m from '../paraglide/messages';
import SkillsProgress from './SkillsProgress.tsx';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const portfolioConfig = getPortfolioConfig(locale);
---

<!-- Versatility -->
<section id="versatility" class="py-32 border-b border-border">
  <div class="max-w-6xl mx-auto px-6">
    <div class="mb-20">
      <h2 class="text-3xl text-foreground mb-4">{m.versatility_title()}</h2>
      <p class="text-base text-muted max-w-2xl leading-relaxed">
        {m.versatility_subtitle()}
      </p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      <!-- Left Column: Philosophy -->
      <div class="space-y-6">
        <div class="space-y-4">
          <p class="text-base text-foreground leading-relaxed">
            {m.versatility_intro()}
          </p>
          <p class="text-sm text-muted leading-[1.7]">
            {m.versatility_p1()}
          </p>
          <p class="text-sm text-muted leading-[1.7]">
            {m.versatility_p2()}
          </p>
          <p class="text-sm text-muted leading-[1.7]">
            {m.versatility_p3()}
          </p>
        </div>
      </div>
      
      <!-- Right Column: Skills Chart -->
      <div class="max-w-md mx-auto w-full">
        <SkillsProgress client:load />
      </div>
    </div>
  </div>
</section>