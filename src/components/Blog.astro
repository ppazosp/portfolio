---
import { getLocalizedCollection } from '../lib/getLocalizedCollection';
import type { Locale } from '../lib/i18n';
import * as m from '../paraglide/messages';
import BlogCard from './BlogCard.astro';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const posts = (await getLocalizedCollection('posts', locale)).slice(0, 3); // Show only latest 3 posts as preview

// Don't render the section if there are no posts
if (posts.length === 0) {
  return null;
}
---

<!-- Blog -->
<section id="blog" class="py-32 border-b border-border">
  <div class="max-w-6xl mx-auto px-6">
    <div class="mb-20">
      <h2 class="text-3xl text-foreground mb-4">{m.blog_title()}</h2>
      <p class="text-base text-muted max-w-2xl leading-relaxed">
        {m.blog_subtitle()}
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      {posts.map((post, index) => (
        <BlogCard post={post} index={index} maxTags={2} />
      ))}
    </div>
    
    <div class="text-center">
      <a
        href={locale === 'es' ? '/es/blog' : '/blog'}
        class="inline-flex items-center gap-2 text-sm text-muted"
      >
        {m.blog_viewAll()} <span>â†’</span>
      </a>
    </div>
  </div>
</section>