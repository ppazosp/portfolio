---
import { getPortfolioConfig, type Locale } from '../lib/i18n';
import * as m from '../paraglide/messages';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const portfolioConfig = getPortfolioConfig(locale);
const { experience } = portfolioConfig;
---

<!-- Experience -->
<section id="experience" class="py-32 border-b border-border">
  <div class="max-w-6xl mx-auto px-6">
    <div class="mb-20">
      <h2 class="text-3xl text-foreground mb-4">{m.experience_title()}</h2>
      <p class="text-base text-muted max-w-2xl leading-relaxed">
        {m.experience_subtitle()}
      </p>
    </div>
    
    <div class="space-y-16">
      {experience.map((exp, index) => (
        <div class="relative">
          <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
            <div>
              <div class="text-xs text-muted text-tabular mb-2">{exp.period}</div>
              <h3 class="text-2xl text-foreground mb-2">{exp.company}</h3>
              <p class="text-sm text-muted">{exp.role}</p>
            </div>
            
            <div class="lg:col-span-2">
              <div class="space-y-6">
                <div>
                  <h4 class="text-xs text-muted uppercase tracking-wider mb-4">Key Achievements</h4>
                  <div class="space-y-2">
                    {exp.impacts.map((impact) => (
                      <p class="text-sm text-foreground leading-relaxed">
                        {impact}
                      </p>
                    ))}
                  </div>
                </div>
                
                <div>
                  <h4 class="text-xs text-muted uppercase tracking-wider mb-4">Skills Gained</h4>
                  <div class="flex flex-wrap gap-2">
                    {exp.skills.map((skill) => (
                      <span class="px-3 py-1 border border-border text-xs text-muted">
                        {skill}
                      </span>
                    ))}
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          {index < experience.length - 1 && (
            <div class="mt-16 h-px bg-border"></div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>