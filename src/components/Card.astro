---
export interface Props {
  class?: string;
  hover?: boolean;
}

const { class: className = '', hover = false } = Astro.props;

const baseClasses = 'border-subtle rounded-lg p-6 bg-background';
const hoverClasses = hover ? 'border-subtle-hover transition-colors duration-200' : '';
const combinedClasses = `${baseClasses} ${hoverClasses} ${className}`.trim();
---

<div class={combinedClasses}>
  <slot />
</div>