---
export interface Props {
  label: string;
  value: string | number;
  unit?: string;
  class?: string;
}

const { label, value, unit, class: className = '' } = Astro.props;
---

<div class={`flex items-center justify-between py-2 border-b border-border last:border-b-0 ${className}`}>
  <span class="text-sm text-muted font-mono">{label}</span>
  <span class="text-sm text-foreground font-mono text-tabular">
    {value}{unit && <span class="text-muted ml-1">{unit}</span>}
  </span>
</div>