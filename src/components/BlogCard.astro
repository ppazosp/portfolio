---
export interface Props {
  post: {
    slug: string;
    data: {
      title: string;
      description: string;
      publishedAt: Date;
      tags: string[];
    };
  };
  index: number;
  showTags?: boolean;
  maxTags?: number;
}

const { post, index, showTags = true } = Astro.props;
---

<a 
  href={`/blog/${post.slug}`}
  class="block border border-border p-6"
>
  <div class="space-y-3 h-full flex flex-col items-start justify-between">
    <div class="flex flex-col items-start">
      <div class="flex w-full items-baseline justify-between gap-4 mb-3">
        <div class="text-xs text-muted text-tabular">
          {post.data.publishedAt.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'short',
            day: '2-digit'
          })}
        </div>
        <span class="text-xs text-muted text-tabular">
          {String(index + 1).padStart(2, '0')}
        </span>
      </div>
      
      <h3 class="text-lg text-foreground leading-tight mb-1">
        {post.data.title}
      </h3>
      
      <p class="text-sm text-muted leading-relaxed">
        {post.data.description}
      </p>
    </div>
    
    <div class="flex flex-col items-start">
      {showTags && post.data.tags.length > 0 && (
        <div class="flex flex-wrap gap-2">
          {post.data.tags.map((tag) => (
            <span class="px-2 py-1 border border-border text-xs text-muted">
              {tag}
            </span>
          ))}
        </div>
      )}
    </div>
  </div>
</a>