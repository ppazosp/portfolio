---
import { getPortfolioConfig, type Locale } from '../lib/i18n';
import * as m from '../paraglide/messages';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const portfolioConfig = getPortfolioConfig(locale);
const { principles } = portfolioConfig;
---

<!-- Principles -->
<section id="principles" class="py-32 border-b border-border">
  <div class="max-w-6xl mx-auto px-6">
    <div class="mb-20">
      <h2 class="text-3xl text-foreground mb-4">{m.principles_title()}</h2>
      <p class="text-base text-muted max-w-2xl leading-relaxed">
        {m.principles_subtitle()}
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
      {principles.map((principle, index) => (
        <div class="space-y-4">
          <div class="flex items-baseline gap-4">
            <span class="text-xs text-muted text-tabular">{String(index + 1).padStart(2, '0')}</span>
            <h3 class="text-lg text-foreground">{principle.title}</h3>
          </div>
          <p class="text-sm text-muted leading-relaxed ml-8">
            {principle.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>