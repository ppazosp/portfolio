---
import { getPortfolioConfig, type Locale } from '../lib/i18n';
import * as m from '../paraglide/messages';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const portfolioConfig = getPortfolioConfig(locale);
const { expertise } = portfolioConfig;
---

<!-- Expertise -->
<section id="expertise" class="py-32 border-b border-border">
  <div class="max-w-6xl mx-auto px-6">
    <div class="mb-20">
      <h2 class="text-3xl text-foreground mb-4">{m.expertise_title()}</h2>
    </div>
    
    <!-- Primary Expertise -->
    <div class="mb-16">
      <div class="flex items-baseline gap-6 mb-8">
        <span class="text-xs text-muted text-tabular">01 / PRIMARY</span>
        <span class="text-xs text-muted uppercase tracking-wider">{expertise.primary.level}</span>
      </div>
        <div class="border border-border p-8">
          <div class="flex items-start justify-between">
            <span class="text-xs text-muted text-tabular">01</span>
          </div>
          <h3 class="text-2xl text-foreground mb-4 leading-tight">
            {expertise.primary.title}
          </h3>
          <p class="text-base text-muted leading-relaxed max-w-3xl">
            {expertise.primary.description}
          </p>
        </div>
    </div>

    <!-- Secondary Expertise -->
    <div class="mb-16">
      <div class="flex items-baseline gap-6 mb-8">
        <span class="text-xs text-muted text-tabular">02 / SECONDARY</span>
        <span class="text-xs text-muted uppercase tracking-wider">Core Competencies</span>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-1">
        {expertise.secondary.map((skill, index) => (
          <div class="border border-border p-6 transition-colors group">
            <div class="flex items-start justify-between mb-4">
              <span class="text-xs text-muted text-tabular">{String(index + 1).padStart(2, '0')}</span>
            </div>
            <h4 class="text-lg text-foreground mb-3 leading-tight">
              {skill.title}
            </h4>
            <p class="text-sm text-muted leading-relaxed">
              {skill.description}
            </p>
          </div>
        ))}
      </div>
    </div>

    <!-- Tertiary Expertise -->
    <div>
      <div class="flex items-baseline gap-6 mb-8">
        <span class="text-xs text-muted text-tabular">03 / TERTIARY</span>
        <span class="text-xs text-muted uppercase tracking-wider">Supporting Skills</span>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-1">
        {expertise.tertiary.map((skill, index) => (
          <div class="border border-border p-6 transition-colors group">
            <div class="flex items-start justify-between mb-4">
              <span class="text-xs text-muted text-tabular">{String(index + 1).padStart(2, '0')}</span>
            </div>
            <h4 class="text-base text-foreground mb-3 leading-tight">
              {skill.title}
            </h4>
            <p class="text-sm text-muted leading-relaxed">
              {skill.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>