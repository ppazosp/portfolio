---
import { getPortfolioConfig, type Locale } from '../lib/i18n';
import * as m from '../paraglide/messages';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const portfolioConfig = getPortfolioConfig(locale);
const { personal, about } = portfolioConfig;
---

<!-- Hero Section -->
<section class="py-32 border-b border-border">
  <div class="max-w-6xl mx-auto px-6">
    <!-- Header -->
    <div class="border-b border-border pb-8 mb-16">
      <div class="flex items-end justify-between">
        <div class="flex items-end gap-8">
          <h1 class="text-4xl lg:text-6xl text-foreground tracking-tight">
            {personal.name}
          </h1>
        </div>
        <div class="text-right">
          <div class="text-xs text-muted text-tabular mb-1">{m.hero_location()}</div>
          <div class="text-sm text-foreground">{personal.location}</div>
        </div>
      </div>
    </div>
    
    <!-- Main Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-16">
      <!-- Column 1: About (Expanded) -->
      <div class="lg:col-span-2 space-y-6">
        <div class="text-xs text-muted text-tabular">01 / {m.hero_about()}</div>
        <div class="space-y-6">
          <div class="space-y-4">
            <p class="text-lg text-foreground leading-relaxed">
              {about.role1}
            </p>
            <p class="text-lg text-foreground leading-relaxed">
              {about.role2}
            </p>
          </div>
          
          <div class="space-y-4">
            {about.paragraphs.map((paragraph) => (
              <p class="text-sm text-muted leading-[1.7]">
                {paragraph}
              </p>
            ))}
          </div>
        </div>
      </div>
      
      <!-- Column 2: Contact & Actions -->
      <div class="lg:col-span-1 space-y-6">
        <div class="text-xs text-muted text-tabular">02 / {m.hero_contact()}</div>
        
        <!-- Contact Links -->
        <div class="space-y-4">
          <div class="space-y-3">
            <div class="flex justify-between items-center py-2 border-b border-border">
              <span class="text-sm text-muted">{m.hero_email()}</span>
              <a
                href={`mailto:${personal.email}`}
                class="text-sm text-foreground transition-colors"
              >
                {personal.email}
              </a>
            </div>

            <div class="flex justify-between items-center py-2 border-b border-border">
              <span class="text-sm text-muted">{m.hero_github()}</span>
              <a
                href={`https://github.com/${personal.github}`}
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm text-foreground  transition-colors"
              >
                {personal.github}
              </a>
            </div>

            <div class="flex justify-between items-center py-2 border-b border-border">
              <span class="text-sm text-muted">{m.hero_linkedin()}</span>
              <a
                href={`https://linkedin.com/in/${personal.linkedin}`}
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm text-foreground  transition-colors"
              >
                {personal.linkedin}
              </a>
            </div>

            <div class="flex justify-between items-center py-2 border-b border-border">
              <span class="text-sm text-muted">{m.hero_company()}</span>
              <a
                href={personal.company.url}
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm text-foreground  transition-colors"
              >
                {personal.company.displayUrl}
              </a>
            </div>
          </div>
          
          <!-- Actions -->
          <div class="pt-4 space-y-3">
            <a 
              href="/docs/pablo-pazos-parada-cv.pdf" 
              class="block w-full py-3 px-6 border border-border text-center text-sm text-foreground transition-colors duration-200"
              target="_blank"
              rel="noopener noreferrer"
            >
              {m.hero_viewResume()}
            </a>

            <div class="grid grid-cols-2 gap-2">
              <a
                href={`mailto:${personal.email}`}
                class="py-3 px-4 border border-border text-center text-xs text-muted transition-colors duration-200"
              >
                {m.hero_email()}
              </a>
              <a
                href={`https://linkedin.com/in/${personal.linkedin}`}
                target="_blank"
                rel="noopener noreferrer"
                class="py-3 px-4 border border-border text-center text-xs text-muted transition-colors duration-200"
              >
                {m.hero_linkedin()}
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>