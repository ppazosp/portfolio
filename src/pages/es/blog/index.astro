---
import { getLocalizedCollection } from '../../../lib/getLocalizedCollection';
import Base from '../../../layouts/Base.astro';
import BlogCard from '../../../components/BlogCard.astro';
import { getPortfolioConfig } from '../../../lib/i18n';
import * as m from '../../../paraglide/messages';

const locale = 'es';
const portfolioConfig = getPortfolioConfig(locale);
const posts = await getLocalizedCollection('posts', locale);

const postsPerPage = 6;
const currentPage = 1;
const totalPages = Math.ceil(posts.length / postsPerPage);
const currentPosts = posts.slice(0, postsPerPage);
---

<Base title={`${m.blog_title()} - ${portfolioConfig.seo.title}`} locale={locale}>
  <div class="min-h-screen bg-background">
    <!-- Header -->
    <header class="border-b border-border bg-background">
      <div class="max-w-6xl mx-auto px-6 py-8">
        <nav class="mb-8">
          <a href="/es" class="text-sm text-muted">
            ← Volver al inicio
          </a>
        </nav>

        <div>
          <h1 class="text-4xl text-foreground mb-4">{m.blog_title()}</h1>
          <p class="text-base text-muted max-w-2xl leading-relaxed">
            {m.blog_subtitle()}
          </p>
        </div>
      </div>
    </header>

    <!-- Posts Grid -->
    <main class="max-w-6xl mx-auto px-6 py-16">
      {currentPosts.length === 0 ? (
        <div class="text-center py-16">
          <div class="text-muted text-sm">
            Aún no hay artículos. Mantente atento a las próximas notas y reflexiones.
          </div>
        </div>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {currentPosts.map((post, index) => (
            <BlogCard post={post} index={index} />
          ))}
        </div>
      )}

      <!-- Pagination -->
      {totalPages > 1 && (
        <div class="mt-16 flex items-center justify-center gap-8">
          <div class="flex items-center gap-2">
            <span class="text-sm text-foreground">{currentPage}</span>
            <span class="text-sm text-muted">de</span>
            <span class="text-sm text-foreground">{totalPages}</span>
          </div>

          {currentPage < totalPages && (
            <a
              href={`/es/blog/page/${currentPage + 1}`}
              class="flex items-center gap-2 text-sm text-muted"
            >
              Siguiente <span>→</span>
            </a>
          )}
        </div>
      )}
    </main>
  </div>
</Base>
