---
import Base from '../layouts/Base.astro';
import Hero from '../components/Hero.astro';
import Blog from '../components/Blog.astro';
import Expertise from '../components/Expertise.astro';
import Versatility from '../components/Versatility.astro';
import Principles from '../components/Principles.astro';
import Projects from '../components/Projects.astro';
import Experience from '../components/Experience.astro';
import LanguageDetector from '../components/LanguageDetector.astro';
import { getPortfolioConfig } from '../lib/i18n';

const locale = 'en';
const portfolioConfig = getPortfolioConfig(locale);
---

<LanguageDetector />
<Base title={portfolioConfig.seo.title} locale={locale}>
  <Hero locale={locale} />
  <Blog locale={locale} />
  <Expertise locale={locale} />
  <Versatility locale={locale} />
  <Principles locale={locale} />
  <Projects locale={locale} />
  <Experience locale={locale} />
</Base>
