---
import { getCollection } from 'astro:content';
import Base from '../layouts/Base.astro';
import SectionTitle from '../components/SectionTitle.astro';
import Card from '../components/Card.astro';
import KpiRow from '../components/KpiRow.astro';
import Divider from '../components/Divider.astro';
import SparkBars from '../islands/SparkBars.tsx';
import RingMeter from '../islands/RingMeter.tsx';
import ProjectPreview from '../islands/ProjectPreview.tsx';
import ContactForm from '../islands/ContactForm.tsx';

const projects = (await getCollection('projects')).sort(
  (a, b) => b.data.publishedAt.valueOf() - a.data.publishedAt.valueOf()
);

const posts = (await getCollection('posts')).sort(
  (a, b) => b.data.publishedAt.valueOf() - a.data.publishedAt.valueOf()
);

// Mock data for sparkline and metrics
const deploymentData = [12, 8, 15, 22, 18, 25, 19, 32, 28, 35, 24, 41, 38, 45, 52];
const heroMetrics = {
  yearsBuilding: 8,
  productionDeployments: 247,
  avgReviewTime: 23,
};

const capabilities = [
  {
    title: "Architecture Design",
    description: "Scalable system design and technical strategy",
    progress: 95
  },
  {
    title: "Backend Development", 
    description: "High-performance APIs and microservices",
    progress: 92
  },
  {
    title: "Security & DevSecOps",
    description: "Zero-trust architecture and secure by design",
    progress: 88
  },
  {
    title: "DevOps & Infrastructure",
    description: "Cloud-native platforms and automation",
    progress: 85
  },
  {
    title: "Frontend & UX",
    description: "Modern web applications and user experience",
    progress: 78
  },
  {
    title: "AI/ML Integration",
    description: "Machine learning ops and intelligent systems",
    progress: 82
  }
];

const principles = [
  {
    title: "Security First",
    description: "Build security into architecture from day one, not as an afterthought. Every design decision considers threat modeling and defense in depth."
  },
  {
    title: "Simplicity Over Complexity", 
    description: "Choose the simplest solution that meets requirements. Complex systems fail in complex ways, simple systems are easier to debug and maintain."
  },
  {
    title: "Measure Everything",
    description: "You cannot improve what you do not measure. Comprehensive observability enables data-driven decisions and proactive issue resolution."
  },
  {
    title: "Fail Fast, Learn Faster",
    description: "Build systems that detect failures quickly and fail safely. Use failures as learning opportunities to build more resilient systems."
  },
  {
    title: "Automate Repetitive Tasks",
    description: "If humans do it more than twice, automate it. Focus human intelligence on creative problem-solving, not repetitive operations."
  },
  {
    title: "Design for Scale",
    description: "Plan for 10x growth from day one. It's easier to scale down than to rewrite when success happens faster than expected."
  }
];

const experience = [
  {
    company: "OSIX Tech",
    role: "CTO & Co-founder",
    period: "2021 - Present",
    impacts: [
      "Led technical strategy for 15+ enterprise clients",
      "Built security-first architecture serving 50M+ users",
      "Reduced client infrastructure costs by average 40%"
    ],
    metrics: [
      { label: "Team Size", value: "12" },
      { label: "Revenue Growth", value: "340%" },
      { label: "Client Retention", value: "97%" }
    ]
  },
  {
    company: "TechCorp Financial",
    role: "Principal Software Architect", 
    period: "2019 - 2021",
    impacts: [
      "Architected high-frequency trading platform",
      "Reduced trade execution latency by 97%",
      "Led migration to cloud-native infrastructure"
    ],
    metrics: [
      { label: "Latency", value: "1.2ms" },
      { label: "Uptime", value: "99.97%" },
      { label: "Cost Savings", value: "$2.1M" }
    ]
  },
  {
    company: "DataFlow Systems",
    role: "Senior Backend Engineer",
    period: "2017 - 2019", 
    impacts: [
      "Built ML infrastructure platform from scratch",
      "Scaled system to handle 200M+ daily requests",
      "Mentored 8 junior engineers"
    ],
    metrics: [
      { label: "Requests/Day", value: "200M+" },
      { label: "Response Time", value: "15ms" },
      { label: "Team Growth", value: "300%" }
    ]
  }
];
---

<Base title="Pablo Pazos - CTO & Software Architect">
  <!-- Hero Section -->
  <section class="py-20 border-b border-border">
    <div class="grid-container">
      <div class="col-span-12 lg:col-span-7">
        <h1 class="text-4xl lg:text-5xl font-mono text-foreground mb-6 leading-tight">
          Pablo Pazos
        </h1>
        <p class="text-xl text-muted font-mono mb-8 leading-relaxed">
          CTO and Software Architect at OSIX Tech, specializing in scalable systems, security architecture, and technical leadership.
        </p>
        <div class="flex gap-4 mb-8">
          <a 
            href="/pablo-pazos-cv.pdf" 
            class="px-6 py-3 border border-foreground text-foreground font-mono text-sm hover:bg-foreground hover:text-background transition-colors duration-200 rounded"
            target="_blank"
            rel="noopener noreferrer"
          >
            View CV
          </a>
          <a 
            href="#contact"
            class="px-6 py-3 border border-border text-muted font-mono text-sm hover:border-foreground hover:text-foreground transition-colors duration-200 rounded"
          >
            Contact
          </a>
        </div>
      </div>
      
      <div class="col-span-12 lg:col-span-5 space-y-6">
        <Card class="animate-idle">
          <div class="space-y-4">
            <KpiRow label="Years Building Systems" value={heroMetrics.yearsBuilding} />
            <KpiRow label="Production Deployments" value={heroMetrics.productionDeployments} />
            <KpiRow label="Avg PR Review Time" value={heroMetrics.avgReviewTime} unit="min" />
          </div>
        </Card>
        
        <Card class="animate-idle" style:animation-delay="2s">
          <div class="flex items-center justify-between mb-2">
            <span class="text-sm text-muted font-mono">Deployment Frequency</span>
            <span class="text-xs text-muted font-mono">Last 15 days</span>
          </div>
          <SparkBars data={deploymentData} client:idle />
        </Card>
        
        <Card class="animate-idle" style:animation-delay="4s">
          <RingMeter 
            value={97} 
            max={100} 
            label="Current Availability" 
            client:idle 
          />
        </Card>
      </div>
    </div>
  </section>

  <!-- Expertise Map -->
  <section id="expertise" class="py-20 border-b border-border">
    <div class="grid-container">
      <div class="col-span-12">
        <SectionTitle 
          title="Expertise Map"
          subtitle="Core capabilities developed through years of building and scaling production systems."
        />
      </div>
      
      <div class="col-span-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {capabilities.map((capability) => (
          <Card hover class="h-full">
            <h3 class="text-lg font-mono text-foreground mb-2">{capability.title}</h3>
            <p class="text-sm text-muted font-mono mb-4 leading-relaxed">{capability.description}</p>
            <div class="flex items-center gap-3">
              <div class="flex-1 h-1 bg-border rounded">
                <div 
                  class="h-full bg-foreground rounded transition-all duration-1000 ease-out"
                  style={`width: ${capability.progress}%`}
                ></div>
              </div>
              <span class="text-xs text-muted font-mono text-tabular">{capability.progress}%</span>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Case Studies -->
  <section id="case-studies" class="py-20 border-b border-border">
    <div class="grid-container">
      <div class="col-span-12">
        <SectionTitle 
          title="Case Studies" 
          subtitle="Selected projects demonstrating technical depth and business impact."
        />
      </div>
      
      <div class="col-span-12 grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-6">
        {projects.map((project) => (
          <ProjectPreview
            title={project.data.title}
            role={project.data.role}
            problem={project.data.problem}
            approach={project.data.approach}
            outcome={project.data.outcome}
            stack={project.data.stack}
            metrics={project.data.metrics}
            links={project.data.links}
            client:idle
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Principles and Decisions -->
  <section id="principles" class="py-20 border-b border-border">
    <div class="grid-container">
      <div class="col-span-12">
        <SectionTitle 
          title="Principles & Decisions"
          subtitle="Core beliefs that guide technical decision-making and team leadership."
        />
      </div>
      
      <div class="col-span-12 grid grid-cols-1 lg:grid-cols-2 gap-6">
        {principles.map((principle, index) => (
          <>
            <Card hover>
              <h3 class="text-lg font-mono text-foreground mb-3">{principle.title}</h3>
              <p class="text-sm text-muted font-mono leading-relaxed">{principle.description}</p>
            </Card>
            {index === 2 && <div class="lg:col-span-2"><Divider /></div>}
          </>
        ))}
      </div>
    </div>
  </section>

  <!-- Experience Timeline -->
  <section id="experience" class="py-20 border-b border-border">
    <div class="grid-container">
      <div class="col-span-12">
        <SectionTitle 
          title="Experience Timeline"
          subtitle="Progressive technical leadership across different scales and domains."
        />
      </div>
      
      <div class="col-span-12">
        <div class="relative">
          <div class="absolute left-0 top-0 bottom-0 w-px bg-border"></div>
          
          <div class="space-y-12">
            {experience.map((exp) => (
              <div class="relative pl-8">
                <div class="absolute left-0 top-2 w-2 h-2 bg-foreground rounded-full transform -translate-x-1/2"></div>
                
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                  <div class="lg:col-span-2">
                    <div class="mb-4">
                      <h3 class="text-xl font-mono text-foreground mb-1">{exp.company}</h3>
                      <div class="flex flex-col sm:flex-row sm:items-center gap-2">
                        <p class="text-lg text-muted font-mono">{exp.role}</p>
                        <span class="hidden sm:block text-muted">·</span>
                        <p class="text-sm text-muted font-mono text-tabular">{exp.period}</p>
                      </div>
                    </div>
                    
                    <ul class="space-y-2">
                      {exp.impacts.map((impact) => (
                        <li class="text-sm text-muted font-mono leading-relaxed flex items-start gap-2">
                          <span class="text-foreground mt-1 text-xs">▸</span>
                          {impact}
                        </li>
                      ))}
                    </ul>
                  </div>
                  
                  <div class="lg:col-span-1">
                    <Card>
                      <div class="space-y-3">
                        {exp.metrics.map((metric) => (
                          <KpiRow 
                            label={metric.label} 
                            value={metric.value} 
                            class="py-1"
                          />
                        ))}
                      </div>
                    </Card>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Open Source and Writing -->
  <section id="writing" class="py-20 border-b border-border">
    <div class="grid-container">
      <div class="col-span-12">
        <SectionTitle 
          title="Open Source & Writing"
          subtitle="Technical insights and tools shared with the developer community."
        />
      </div>
      
      <div class="col-span-12">
        <Card>
          <div class="space-y-4">
            {posts.map((post, index) => (
              <div 
                class={`flex items-center justify-between py-3 ${index !== posts.length - 1 ? 'border-b border-border' : ''}`}
              >
                <div class="flex-1">
                  <a 
                    href={post.data.url} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="text-sm font-mono text-foreground hover:text-accent transition-colors"
                  >
                    {post.data.title}
                  </a>
                  <p class="text-xs text-muted font-mono mt-1">{post.data.description}</p>
                  {post.data.tags.length > 0 && (
                    <div class="flex gap-2 mt-2">
                      {post.data.tags.map((tag) => (
                        <span class="px-2 py-0.5 text-xs font-mono bg-border/50 text-muted rounded">
                          {tag}
                        </span>
                      ))}
                    </div>
                  )}
                </div>
                <div class="text-right ml-4">
                  {post.data.stars && (
                    <p class="text-sm font-mono text-tabular text-foreground">⭐ {post.data.stars}</p>
                  )}
                  <p class="text-xs text-muted font-mono text-tabular">
                    {post.data.publishedAt.toLocaleDateString('en-US', { 
                      month: 'short', 
                      day: 'numeric',
                      year: 'numeric'
                    })}
                  </p>
                </div>
              </div>
            ))}
          </div>
        </Card>
      </div>
    </div>
  </section>

  <!-- Contact -->
  <section id="contact" class="py-20">
    <div class="grid-container">
      <div class="col-span-12">
        <SectionTitle 
          title="Contact"
          subtitle="Let's discuss your next technical challenge or potential collaboration."
        />
      </div>
      
      <div class="col-span-12 grid grid-cols-1 lg:grid-cols-2 gap-8">
        <Card>
          <h3 class="text-lg font-mono text-foreground mb-6">Get In Touch</h3>
          <div class="space-y-4">
            <div>
              <p class="text-sm text-muted font-mono mb-1">Email</p>
              <a 
                href="mailto:pablo@osixtech.com" 
                class="text-sm font-mono text-foreground hover:text-accent transition-colors"
              >
                pablo@osixtech.com
              </a>
            </div>
            
            <div>
              <p class="text-sm text-muted font-mono mb-1">LinkedIn</p>
              <a 
                href="https://linkedin.com/in/pablopazos" 
                target="_blank" 
                rel="noopener noreferrer"
                class="text-sm font-mono text-foreground hover:text-accent transition-colors"
              >
                linkedin.com/in/pablopazos
              </a>
            </div>
            
            <div>
              <p class="text-sm text-muted font-mono mb-1">GitHub</p>
              <a 
                href="https://github.com/ppazosp" 
                target="_blank" 
                rel="noopener noreferrer"
                class="text-sm font-mono text-foreground hover:text-accent transition-colors"
              >
                github.com/ppazosp
              </a>
            </div>
            
            <div>
              <p class="text-sm text-muted font-mono mb-1">Location</p>
              <p class="text-sm font-mono text-foreground">
                Santiago de Compostela, Spain (UTC+1)
              </p>
            </div>
          </div>
        </Card>
        
        <ContactForm client:idle />
      </div>
    </div>
  </section>
</Base>
