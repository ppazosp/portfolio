---
import { getCollection } from 'astro:content';
import Base from '../layouts/Base.astro';
import SectionTitle from '../components/SectionTitle.astro';
import Card from '../components/Card.astro';
import KpiRow from '../components/KpiRow.astro';
import Divider from '../components/Divider.astro';
import SparkBars from '../islands/SparkBars.tsx';
import RingMeter from '../islands/RingMeter.tsx';
import ProjectPreview from '../islands/ProjectPreview.tsx';
import ContactForm from '../islands/ContactForm.tsx';

const projects = (await getCollection('projects')).sort(
  (a, b) => b.data.publishedAt.valueOf() - a.data.publishedAt.valueOf()
);

const posts = (await getCollection('posts')).sort(
  (a, b) => b.data.publishedAt.valueOf() - a.data.publishedAt.valueOf()
);

// Real data for sparkline and metrics
const aiProductivityData = [45, 52, 48, 65, 72, 68, 85, 92, 88, 95, 100, 105, 98, 115, 120];
const heroMetrics = {
  yearsOfStudy: 4,
  aiProductivityBoost: 200,
  teamMembers: 5,
};

const capabilities = [
  {
    title: "Software Architecture",
    description: "System design, problem-solving, finding optimal solutions for any scenario",
    progress: 95
  },
  {
    title: "AI-Powered Development", 
    description: "Agent architectures, AI adoption, prompt engineering, workflow optimization",
    progress: 92
  },
  {
    title: "Full-Stack Development",
    description: "Frontend and backend, high and low level, modern web technologies",
    progress: 88
  },
  {
    title: "Team Leadership",
    description: "CTO role, workflow optimization, technical mentoring, productivity coaching",
    progress: 85
  },
  {
    title: "Modern DevOps",
    description: "Infrastructure automation, AI-assisted deployments, rapid iteration",
    progress: 82
  },
  {
    title: "Real-World Problem Solving",
    description: "Practical solutions for real businesses, community-driven development",
    progress: 90
  }
];

const principles = [
  {
    title: "AI as a Multiplier",
    description: "Use AI to amplify human capabilities, not replace thinking. Focus on designing workflows while AI handles implementation details."
  },
  {
    title: "Jack of All Trades", 
    description: "Breadth over depth enables better architecture decisions. Understanding the full stack prevents siloed thinking."
  },
  {
    title: "Abstract Thinking",
    description: "Focus on workflows and system design, not implementation specifics. Let AI handle the 'how', you handle the 'what' and 'why'."
  },
  {
    title: "Rapid Iteration",
    description: "Ship fast, ship often, improve continuously. Modern tools enable rapid prototyping and testing of ideas."
  },
  {
    title: "Team Empowerment",
    description: "Teaching AI adoption multiplies team productivity. Everyone should leverage these tools to focus on creative problem-solving."
  },
  {
    title: "Real-World Impact",
    description: "Build solutions that solve actual problems, not academic exercises. University knowledge is outdated - focus on modern practices."
  }
];

const experience = [
  {
    company: "OSIX Tech",
    role: "CTO & Co-founder",
    period: "2024 - Present",
    impacts: [
      "Led technical architecture and AI adoption strategy",
      "Achieved 200% productivity increase through AI integration", 
      "Built team of 5 engineers from university colleagues"
    ],
    metrics: [
      { label: "Team Size", value: "5" },
      { label: "AI Productivity", value: "200%" },
      { label: "Projects Completed", value: "8" }
    ]
  },
  {
    company: "Padel Organization",
    role: "Software Developer & Vigilante", 
    period: "Summer 2023 & 2024",
    impacts: [
      "Developed court reservation system for the community",
      "Discovered passion for solving real-world problems",
      "Transitioned from academic to modern software practices"
    ],
    metrics: [
      { label: "Users Served", value: "150+" },
      { label: "Bookings/Month", value: "400+" },
      { label: "System Uptime", value: "99.5%" }
    ]
  },
  {
    company: "University of Santiago",
    role: "Computer Engineering Student",
    period: "2021 - 2025", 
    impacts: [
      "Explored all areas of computer science fundamentals",
      "Participated in multiple hackathons with team",
      "Self-taught modern software architecture principles"
    ],
    metrics: [
      { label: "Year of Study", value: "4th" },
      { label: "Hackathons", value: "4" },
      { label: "GPA Focus", value: "Architecture" }
    ]
  }
];
---

<Base title="Pablo Pazos - Student & CTO at OSIX Tech">
  <!-- Hero Section -->
  <section class="py-20 border-b border-border">
    <div class="grid-container">
      <div class="col-span-12 lg:col-span-7">
        <h1 class="text-4xl lg:text-5xl font-mono text-foreground mb-6 leading-tight">
          Pablo Pazos
        </h1>
        <p class="text-xl text-muted font-mono mb-8 leading-relaxed">
          4th year Computer Engineering Student at USC & CTO at OSIX Tech. Passionate about software architecture, AI adoption, and building real-world solutions.
        </p>
        <div class="flex gap-4 mb-8">
          <a 
            href="/pablo-pazos-cv.pdf" 
            class="px-6 py-3 border border-foreground text-foreground font-mono text-sm hover:bg-foreground hover:text-background transition-colors duration-200 rounded"
            target="_blank"
            rel="noopener noreferrer"
          >
            View CV
          </a>
          <a 
            href="#contact"
            class="px-6 py-3 border border-border text-muted font-mono text-sm hover:border-foreground hover:text-foreground transition-colors duration-200 rounded"
          >
            Contact
          </a>
        </div>
      </div>
      
      <div class="col-span-12 lg:col-span-5 space-y-6">
        <Card class="animate-idle">
          <div class="space-y-4">
            <KpiRow label="Years of Study" value={heroMetrics.yearsOfStudy} />
            <KpiRow label="AI Productivity Boost" value={heroMetrics.aiProductivityBoost} unit="%" />
            <KpiRow label="Team Members" value={heroMetrics.teamMembers} />
          </div>
        </Card>
        
        <Card class="animate-idle" style:animation-delay="2s">
          <div class="flex items-center justify-between mb-2">
            <span class="text-sm text-muted font-mono">AI-Assisted Productivity</span>
            <span class="text-xs text-muted font-mono">Weekly growth %</span>
          </div>
          <SparkBars data={aiProductivityData} client:idle />
        </Card>
        
        <Card class="animate-idle" style:animation-delay="4s">
          <RingMeter 
            value={97} 
            max={100} 
            label="Current Availability" 
            client:idle 
          />
        </Card>
      </div>
    </div>
  </section>

  <!-- Expertise Map -->
  <section id="expertise" class="py-20 border-b border-border">
    <div class="grid-container">
      <div class="col-span-12">
        <SectionTitle 
          title="Expertise Map"
          subtitle="Core capabilities developed through years of building and scaling production systems."
        />
      </div>
      
      <div class="col-span-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {capabilities.map((capability) => (
          <Card hover class="h-full">
            <h3 class="text-lg font-mono text-foreground mb-2">{capability.title}</h3>
            <p class="text-sm text-muted font-mono mb-4 leading-relaxed">{capability.description}</p>
            <div class="flex items-center gap-3">
              <div class="flex-1 h-1 bg-border rounded">
                <div 
                  class="h-full bg-foreground rounded transition-all duration-1000 ease-out"
                  style={`width: ${capability.progress}%`}
                ></div>
              </div>
              <span class="text-xs text-muted font-mono text-tabular">{capability.progress}%</span>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Case Studies -->
  <section id="case-studies" class="py-20 border-b border-border">
    <div class="grid-container">
      <div class="col-span-12">
        <SectionTitle 
          title="Case Studies" 
          subtitle="Selected projects demonstrating technical depth and business impact."
        />
      </div>
      
      <div class="col-span-12 grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-6">
        {projects.map((project) => (
          <ProjectPreview
            title={project.data.title}
            role={project.data.role}
            problem={project.data.problem}
            approach={project.data.approach}
            outcome={project.data.outcome}
            stack={project.data.stack}
            metrics={project.data.metrics}
            links={project.data.links}
            client:idle
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Principles and Decisions -->
  <section id="principles" class="py-20 border-b border-border">
    <div class="grid-container">
      <div class="col-span-12">
        <SectionTitle 
          title="Principles & Decisions"
          subtitle="Core beliefs that guide technical decision-making and team leadership."
        />
      </div>
      
      <div class="col-span-12 grid grid-cols-1 lg:grid-cols-2 gap-6">
        {principles.map((principle, index) => (
          <>
            <Card hover>
              <h3 class="text-lg font-mono text-foreground mb-3">{principle.title}</h3>
              <p class="text-sm text-muted font-mono leading-relaxed">{principle.description}</p>
            </Card>
            {index === 2 && <div class="lg:col-span-2"><Divider /></div>}
          </>
        ))}
      </div>
    </div>
  </section>

  <!-- Experience Timeline -->
  <section id="experience" class="py-20 border-b border-border">
    <div class="grid-container">
      <div class="col-span-12">
        <SectionTitle 
          title="Experience Timeline"
          subtitle="Progressive technical leadership across different scales and domains."
        />
      </div>
      
      <div class="col-span-12">
        <div class="relative">
          <div class="absolute left-0 top-0 bottom-0 w-px bg-border"></div>
          
          <div class="space-y-12">
            {experience.map((exp) => (
              <div class="relative pl-8">
                <div class="absolute left-0 top-2 w-2 h-2 bg-foreground rounded-full transform -translate-x-1/2"></div>
                
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                  <div class="lg:col-span-2">
                    <div class="mb-4">
                      <h3 class="text-xl font-mono text-foreground mb-1">{exp.company}</h3>
                      <div class="flex flex-col sm:flex-row sm:items-center gap-2">
                        <p class="text-lg text-muted font-mono">{exp.role}</p>
                        <span class="hidden sm:block text-muted">·</span>
                        <p class="text-sm text-muted font-mono text-tabular">{exp.period}</p>
                      </div>
                    </div>
                    
                    <ul class="space-y-2">
                      {exp.impacts.map((impact) => (
                        <li class="text-sm text-muted font-mono leading-relaxed flex items-start gap-2">
                          <span class="text-foreground mt-1 text-xs">▸</span>
                          {impact}
                        </li>
                      ))}
                    </ul>
                  </div>
                  
                  <div class="lg:col-span-1">
                    <Card>
                      <div class="space-y-3">
                        {exp.metrics.map((metric) => (
                          <KpiRow 
                            label={metric.label} 
                            value={metric.value} 
                            class="py-1"
                          />
                        ))}
                      </div>
                    </Card>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Open Source and Writing -->
  <section id="writing" class="py-20 border-b border-border">
    <div class="grid-container">
      <div class="col-span-12">
        <SectionTitle 
          title="Open Source & Writing"
          subtitle="Technical insights and tools shared with the developer community."
        />
      </div>
      
      <div class="col-span-12">
        <Card>
          <div class="space-y-4">
            {posts.map((post, index) => (
              <div 
                class={`flex items-center justify-between py-3 ${index !== posts.length - 1 ? 'border-b border-border' : ''}`}
              >
                <div class="flex-1">
                  <a 
                    href={post.data.url} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="text-sm font-mono text-foreground hover:text-accent transition-colors"
                  >
                    {post.data.title}
                  </a>
                  <p class="text-xs text-muted font-mono mt-1">{post.data.description}</p>
                  {post.data.tags.length > 0 && (
                    <div class="flex gap-2 mt-2">
                      {post.data.tags.map((tag) => (
                        <span class="px-2 py-0.5 text-xs font-mono bg-border/50 text-muted rounded">
                          {tag}
                        </span>
                      ))}
                    </div>
                  )}
                </div>
                <div class="text-right ml-4">
                  {post.data.stars && (
                    <p class="text-sm font-mono text-tabular text-foreground">⭐ {post.data.stars}</p>
                  )}
                  <p class="text-xs text-muted font-mono text-tabular">
                    {post.data.publishedAt.toLocaleDateString('en-US', { 
                      month: 'short', 
                      day: 'numeric',
                      year: 'numeric'
                    })}
                  </p>
                </div>
              </div>
            ))}
          </div>
        </Card>
      </div>
    </div>
  </section>

  <!-- Contact -->
  <section id="contact" class="py-20">
    <div class="grid-container">
      <div class="col-span-12">
        <SectionTitle 
          title="Contact"
          subtitle="Let's discuss your next technical challenge or potential collaboration."
        />
      </div>
      
      <div class="col-span-12 grid grid-cols-1 lg:grid-cols-2 gap-8">
        <Card>
          <h3 class="text-lg font-mono text-foreground mb-6">Get In Touch</h3>
          <div class="space-y-4">
            <div>
              <p class="text-sm text-muted font-mono mb-1">Email</p>
              <a 
                href="mailto:pablo@osixtech.com" 
                class="text-sm font-mono text-foreground hover:text-accent transition-colors"
              >
                pablo@osixtech.com
              </a>
            </div>
            
            <div>
              <p class="text-sm text-muted font-mono mb-1">LinkedIn</p>
              <a 
                href="https://linkedin.com/in/pablo-pazos-portela" 
                target="_blank" 
                rel="noopener noreferrer"
                class="text-sm font-mono text-foreground hover:text-accent transition-colors"
              >
                linkedin.com/in/pablo-pazos-portela
              </a>
            </div>
            
            <div>
              <p class="text-sm text-muted font-mono mb-1">GitHub</p>
              <a 
                href="https://github.com/ppazosp" 
                target="_blank" 
                rel="noopener noreferrer"
                class="text-sm font-mono text-foreground hover:text-accent transition-colors"
              >
                github.com/ppazosp
              </a>
            </div>
            
            <div>
              <p class="text-sm text-muted font-mono mb-1">Company</p>
              <a 
                href="https://osixtech.com" 
                target="_blank" 
                rel="noopener noreferrer"
                class="text-sm font-mono text-foreground hover:text-accent transition-colors"
              >
                osixtech.com
              </a>
            </div>
            
            <div>
              <p class="text-sm text-muted font-mono mb-1">Location</p>
              <p class="text-sm font-mono text-foreground">
                Santiago de Compostela, Spain (UTC+1)
              </p>
            </div>
          </div>
        </Card>
        
        <ContactForm client:idle />
      </div>
    </div>
  </section>
</Base>
