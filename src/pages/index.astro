---
import { getCollection } from 'astro:content';
import Base from '../layouts/Base.astro';
import TechStackWithRadar from '../islands/TechStackWithRadar.tsx';

const projects = (await getCollection('projects')).sort(
  (a, b) => b.data.publishedAt.valueOf() - a.data.publishedAt.valueOf()
);

// Real data for metrics
const heroMetrics = {
  yearsOfStudy: 4,
  aiProductivityBoost: 200,
  teamMembers: 5,
};

const expertiseHierarchy = {
  primary: {
    title: "Software Architecture",
    description: "System design, problem-solving, finding optimal solutions for any scenario",
    level: "Primary Expertise"
  },
  secondary: [
    {
      title: "AI-Powered Development",
      description: "Agent architectures, AI adoption, prompt engineering, workflow optimization"
    },
    {
      title: "Full-Stack Development", 
      description: "Frontend and backend, high and low level, modern web technologies"
    }
  ],
  tertiary: [
    {
      title: "Team Leadership",
      description: "CTO role, workflow optimization, technical mentoring, productivity coaching"
    },
    {
      title: "Entrepreneurial Mindset",
      description: "Turning ideas into impact, aligning business and technology"
    },
    {
      title: "Continuous Learning",
      description: "Adaptability, staying ahead of new tools, and evolving with tech"
    }
  ]
};

const principles = [
  {
    title: "AI as a Multiplier",
    description: "Use AI to amplify human capabilities, not replace thinking. Focus on designing workflows while AI handles implementation details."
  },
  {
    title: "Jack of All Trades", 
    description: "Breadth over depth enables better architecture decisions. Understanding the full stack prevents siloed thinking."
  },
  {
    title: "Abstract Thinking",
    description: "Focus on workflows and system design, not implementation specifics. Let AI handle the 'how', you handle the 'what' and 'why'."
  },
  {
    title: "Rapid Iteration",
    description: "Ship fast, ship often, improve continuously. Modern tools enable rapid prototyping and testing of ideas."
  },
  {
    title: "Team Empowerment",
    description: "Teaching AI adoption multiplies team productivity. Everyone should leverage these tools to focus on creative problem-solving."
  },
  {
    title: "Real-World Impact",
    description: "Build solutions that solve actual problems, not academic exercises. University knowledge is outdated - focus on modern practices."
  }
];

const experience = [
  {
    company: "OSIX Tech",
    role: "CTO & Co-founder",
    period: "2024 - Present",
    impacts: [
      "Led technical architecture and AI adoption strategy",
      "Achieved 200% productivity increase through AI integration", 
      "Built team of 5 engineers from university colleagues"
    ],
    metrics: [
      { label: "Team Size", value: "5" },
      { label: "AI Productivity", value: "200%" },
      { label: "Projects Completed", value: "8" }
    ]
  },
  {
    company: "Padel Organization",
    role: "Software Developer & Vigilante", 
    period: "Summer 2023 & 2024",
    impacts: [
      "Developed court reservation system for the community",
      "Discovered passion for solving real-world problems",
      "Transitioned from academic to modern software practices"
    ],
    metrics: [
      { label: "Users Served", value: "150+" },
      { label: "Bookings/Month", value: "400+" },
      { label: "System Uptime", value: "99.5%" }
    ]
  },
  {
    company: "University of Santiago",
    role: "Computer Engineering Student",
    period: "2021 - 2025", 
    impacts: [
      "Explored all areas of computer science fundamentals",
      "Participated in multiple hackathons with team",
      "Self-taught modern software architecture principles"
    ],
    metrics: [
      { label: "Year of Study", value: "4th" },
      { label: "Hackathons", value: "4" },
      { label: "GPA Focus", value: "Architecture" }
    ]
  }
];
---

<Base title="Pablo Pazos - Student & CTO at OSIX Tech">
  <!-- Hero Section -->
  <section class="py-20 border-b border-border">
    <div class="max-w-6xl mx-auto px-6">
      <!-- Header -->
      <div class="border-b border-border pb-8 mb-16">
        <div class="flex items-end justify-between">
          <div class="flex items-end gap-8">
            <!--<div class="relative group">
              <img 
                src="/assets/pablo-pazos.jpeg" 
                alt="Pablo Pazos"
                class="w-20 h-20 lg:w-24 lg:h-24 object-cover border border-border grayscale group-hover:grayscale-0 transition-all duration-500"
              />
              <div class="absolute inset-0 border border-foreground/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            </div>-->
            <h1 class="text-4xl lg:text-6xl font-mono text-foreground tracking-tight">
              Pablo Pazos
            </h1>
          </div>
          <div class="text-right">
            <div class="text-xs text-muted font-mono text-tabular mb-1">LOCATION</div>
            <div class="text-sm text-foreground font-mono">Santiago, ES</div>
          </div>
        </div>
      </div>
      
      <!-- Main Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-16">
        <!-- Column 1: About (Expanded) -->
        <div class="lg:col-span-2 space-y-6">
          <div class="text-xs text-muted font-mono text-tabular">01 / ABOUT</div>
          <div class="space-y-6">
            <div class="space-y-4">
              <p class="text-lg text-foreground font-mono leading-relaxed">
                Computer Science student at USC
              </p>
              <p class="text-lg text-foreground font-mono leading-relaxed">
                CTO & Co-founder at OSIX Tech
              </p>
            </div>
            
            <div class="space-y-4">
              <p class="text-sm text-muted font-mono leading-[1.7]">
                Balancing my role as CTO of a growing startup with my Computer Engineering studies. 
                This dual path sharpens both my academic foundation and my real-world leadership experience.
              </p>
              <p class="text-sm text-muted font-mono leading-[1.7]">
                Passionate about software architecture, I enjoy understanding the full spectrum of technologies 
                without locking myself into a single specialization. This broad vision allows me to design systems 
                that are flexible, scalable, and future-proof.
              </p>
              <p class="text-sm text-muted font-mono leading-[1.7]">
                Specialized in applying and integrating AI across workflows, I focus on solving real problems 
                and evaluating solutions with a pragmatic, impact-driven mindset. 
                My strength lies in turning complex challenges into clear, actionable architectures.
              </p>
            </div>
          </div>
        </div>
        
        <!-- Column 2: Contact & Actions -->
        <div class="lg:col-span-1 space-y-6">
          <div class="text-xs text-muted font-mono text-tabular">02 / CONTACT</div>
          
          <!-- Contact Links -->
          <div class="space-y-4">
            <div class="space-y-3">
              <div class="flex justify-between items-center py-2 border-b border-border">
                <span class="text-sm text-muted font-mono">Email</span>
                <a 
                  href="mailto:pablopazosp3@gmail.com" 
                  class="text-sm text-foreground font-mono hover:text-accent transition-colors"
                >
                  pablopazosp3@gmail.com
                </a>
              </div>
              
              <div class="flex justify-between items-center py-2 border-b border-border">
                <span class="text-sm text-muted font-mono">GitHub</span>
                <a 
                  href="https://github.com/ppazosp" 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="text-sm text-foreground font-mono hover:text-accent transition-colors"
                >
                  ppazosp
                </a>
              </div>
              
              <div class="flex justify-between items-center py-2 border-b border-border">
                <span class="text-sm text-muted font-mono">LinkedIn</span>
                <a 
                  href="https://linkedin.com/in/pablo-pazos-portela" 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="text-sm text-foreground font-mono hover:text-accent transition-colors"
                >
                  pablo-pazos-parada
                </a>
              </div>
              
              <div class="flex justify-between items-center py-2 border-b border-border">
                <span class="text-sm text-muted font-mono">Company</span>
                <a 
                  href="https://osixtech.com" 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="text-sm text-foreground font-mono hover:text-accent transition-colors"
                >
                  osix.tech
                </a>
              </div>
            </div>
            
            <!-- Actions -->
            <div class="pt-4 space-y-3">
              <a 
                href="/pablo-pazos-cv.pdf" 
                class="block w-full py-3 px-6 border border-border text-center font-mono text-sm text-foreground hover:bg-foreground hover:text-background transition-colors duration-200"
                target="_blank"
                rel="noopener noreferrer"
              >
                View Resume
              </a>
              
              <div class="grid grid-cols-2 gap-2">
                <a 
                  href="mailto:pablopazosp3@gmail.com"
                  class="py-3 px-4 border border-border text-center font-mono text-xs text-muted hover:border-foreground hover:text-foreground transition-colors duration-200"
                >
                  Email
                </a>
                <a 
                  href="https://linkedin.com/in/pablo-pazos-portela"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="py-3 px-4 border border-border text-center font-mono text-xs text-muted hover:border-foreground hover:text-foreground transition-colors duration-200"
                >
                  LinkedIn
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Expertise -->
  <section id="expertise" class="py-32 border-b border-border">
    <div class="max-w-6xl mx-auto px-6">
      <div class="mb-20">
        <h2 class="text-3xl font-mono text-foreground mb-4">Expertise</h2>
        <p class="text-base text-muted font-mono max-w-2xl leading-relaxed">
          Core capabilities developed through hands-on experience building modern software solutions.
        </p>
      </div>
      
      <!-- Primary Expertise -->
      <div class="mb-16">
        <div class="flex items-baseline gap-6 mb-8">
          <span class="text-xs text-muted font-mono text-tabular">01 / PRIMARY</span>
          <span class="text-xs text-muted font-mono uppercase tracking-wider">{expertiseHierarchy.primary.level}</span>
        </div>
          <div class="border border-foreground bg-foreground/5 p-8">
            <div class="flex items-start justify-between">
              <div class="w-3 h-3 bg-foreground"></div>
              <span class="text-xs text-muted font-mono text-tabular">01</span>
            </div>
            <h3 class="text-2xl font-mono text-foreground mb-4 leading-tight">
              {expertiseHierarchy.primary.title}
            </h3>
            <p class="text-base text-muted font-mono leading-relaxed max-w-3xl">
              {expertiseHierarchy.primary.description}
            </p>
          </div>
      </div>

      <!-- Secondary Expertise -->
      <div class="mb-16">
        <div class="flex items-baseline gap-6 mb-8">
          <span class="text-xs text-muted font-mono text-tabular">02 / SECONDARY</span>
          <span class="text-xs text-muted font-mono uppercase tracking-wider">Core Competencies</span>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-1">
          {expertiseHierarchy.secondary.map((skill, index) => (
            <div class="border border-border p-6 hover:border-foreground/20 transition-colors group">
              <div class="flex items-start justify-between mb-4">
                <div class="w-2 h-2 bg-border group-hover:bg-foreground/40 transition-colors"></div>
                <span class="text-xs text-muted font-mono text-tabular">{String(index + 1).padStart(2, '0')}</span>
              </div>
              <h4 class="text-lg font-mono text-foreground mb-3 leading-tight">
                {skill.title}
              </h4>
              <p class="text-sm text-muted font-mono leading-relaxed">
                {skill.description}
              </p>
            </div>
          ))}
        </div>
      </div>

      <!-- Tertiary Expertise -->
      <div>
        <div class="flex items-baseline gap-6 mb-8">
          <span class="text-xs text-muted font-mono text-tabular">03 / TERTIARY</span>
          <span class="text-xs text-muted font-mono uppercase tracking-wider">Supporting Skills</span>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-1">
          {expertiseHierarchy.tertiary.map((skill, index) => (
            <div class="border border-border p-6 hover:border-foreground/20 transition-colors group">
              <div class="flex items-start justify-between mb-4">
                <div class="w-1 h-1 bg-border group-hover:bg-foreground/40 transition-colors"></div>
                <span class="text-xs text-muted font-mono text-tabular">{String(index + 1).padStart(2, '0')}</span>
              </div>
              <h4 class="text-base font-mono text-foreground mb-3 leading-tight">
                {skill.title}
              </h4>
              <p class="text-sm text-muted font-mono leading-relaxed">
                {skill.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Skills Radar -->
  <section id="skills" class="py-32 border-b border-border">
    <div class="max-w-6xl mx-auto px-6">
      <div class="mb-20">
        <h2 class="text-3xl font-mono text-foreground mb-4">Technical Skills</h2>
        <p class="text-base text-muted font-mono max-w-2xl leading-relaxed">
          Visual representation of proficiency across key technical domains.
        </p>
      </div>
      
      <div class="max-w-6xl mx-auto">
        <TechStackWithRadar client:load />
      </div>
    </div>
  </section>

  <!-- Projects -->
  <section id="case-studies" class="py-32 border-b border-border">
    <div class="max-w-6xl mx-auto px-6">
      <div class="mb-20">
        <h2 class="text-3xl font-mono text-foreground mb-4">Selected Projects</h2>
        <p class="text-base text-muted font-mono max-w-2xl leading-relaxed">
          Real-world projects demonstrating technical depth and business impact.
        </p>
      </div>
      
      <div class="space-y-24">
        {projects.map((project, index) => (
          <div class="border-l-2 border-border pl-12 relative">
            <div class="absolute -left-2 top-0 w-4 h-4 bg-background border-2 border-border"></div>
            
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
              <div>
                <div class="text-xs text-muted font-mono text-tabular mb-4">
                  {String(index + 1).padStart(2, '0')} / {project.data.role}
                </div>
                <h3 class="text-2xl font-mono text-foreground mb-6 leading-tight">
                  {project.data.title}
                </h3>
                <div class="space-y-4 text-sm text-muted font-mono leading-relaxed">
                  <div>
                    <span class="text-foreground">Problem:</span> {project.data.problem}
                  </div>
                  <div>
                    <span class="text-foreground">Approach:</span> {project.data.approach}
                  </div>
                  <div>
                    <span class="text-foreground">Outcome:</span> {project.data.outcome}
                  </div>
                </div>
              </div>
              
              <div class="space-y-8">
                <div>
                  <h4 class="text-xs text-muted font-mono uppercase tracking-wider mb-4">Impact Metrics</h4>
                  <div class="space-y-2">
                    {project.data.metrics.map((metric) => (
                      <div class="flex justify-between py-2 border-b border-border">
                        <span class="text-sm text-muted font-mono">{metric.label}</span>
                        <span class="text-sm text-foreground font-mono text-tabular">{metric.value}</span>
                      </div>
                    ))}
                  </div>
                </div>
                
                <div>
                  <h4 class="text-xs text-muted font-mono uppercase tracking-wider mb-4">Technology Stack</h4>
                  <div class="flex flex-wrap gap-2">
                    {project.data.stack.map((tech) => (
                      <span class="px-3 py-1 border border-border text-xs text-muted font-mono">
                        {tech}
                      </span>
                    ))}
                  </div>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Philosophy -->
  <section id="principles" class="py-32 border-b border-border">
    <div class="max-w-6xl mx-auto px-6">
      <div class="mb-20">
        <h2 class="text-3xl font-mono text-foreground mb-4">Philosophy</h2>
        <p class="text-base text-muted font-mono max-w-2xl leading-relaxed">
          Core beliefs that guide technical decision-making and team leadership.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        {principles.map((principle, index) => (
          <div class="space-y-4">
            <div class="flex items-baseline gap-4">
              <span class="text-xs text-muted font-mono text-tabular">{String(index + 1).padStart(2, '0')}</span>
              <h3 class="text-lg font-mono text-foreground">{principle.title}</h3>
            </div>
            <p class="text-sm text-muted font-mono leading-relaxed ml-8">
              {principle.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Experience -->
  <section id="experience" class="py-32 border-b border-border">
    <div class="max-w-6xl mx-auto px-6">
      <div class="mb-20">
        <h2 class="text-3xl font-mono text-foreground mb-4">Experience</h2>
        <p class="text-base text-muted font-mono max-w-2xl leading-relaxed">
          Progressive journey through different roles and technical challenges.
        </p>
      </div>
      
      <div class="space-y-16">
        {experience.map((exp, index) => (
          <div class="relative">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
              <div>
                <div class="text-xs text-muted font-mono text-tabular mb-2">{exp.period}</div>
                <h3 class="text-2xl font-mono text-foreground mb-2">{exp.company}</h3>
                <p class="text-sm text-muted font-mono">{exp.role}</p>
              </div>
              
              <div class="lg:col-span-2">
                <div class="space-y-6">
                  <div>
                    <h4 class="text-xs text-muted font-mono uppercase tracking-wider mb-4">Key Achievements</h4>
                    <div class="space-y-2">
                      {exp.impacts.map((impact) => (
                        <p class="text-sm text-foreground font-mono leading-relaxed">
                          {impact}
                        </p>
                      ))}
                    </div>
                  </div>
                  
                  <div>
                    <h4 class="text-xs text-muted font-mono uppercase tracking-wider mb-4">Key Metrics</h4>
                    <div class="grid grid-cols-3 gap-6">
                      {exp.metrics.map((metric) => (
                        <div class="text-center">
                          <div class="text-lg font-mono text-foreground text-tabular">{metric.value}</div>
                          <div class="text-xs text-muted font-mono mt-1">{metric.label}</div>
                        </div>
                      ))}
                    </div>
                  </div>
                </div>
              </div>
            </div>
            
            {index < experience.length - 1 && (
              <div class="mt-16 h-px bg-border"></div>
            )}
          </div>
        ))}
      </div>
    </div>
  </section>


</Base>
